<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.talelin.latticy.laver.mapper.BannerMapper">
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="io.github.talelin.latticy.laver.model.Banner">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="title" property="title"/>
        <result column="img" property="img"/>
    </resultMap>
    <insert id="insertBanner" useGeneratedKeys="true" keyProperty="id" parameterType="io.github.talelin.latticy.laver.model.Banner">
        INSERT INTO banner(name, title)
        values (#{name}, #{title})
    </insert>

    <select id="selectBanners" resultMap="BaseResultMap">
        SELECT *
        FROM banner
    </select>



</mapper>